@using NuGetGallery;
<!DOCTYPE html> 
<html lang="en" class="static "> 
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <title>Code52 Extension Gallery</title> 
        <link href="@Url.Content("~/Content/site.css")" rel="stylesheet" />
        <link href="@Url.Content("~/favicon.ico")" rel="shortcut icon" type="image/x-icon" />
        <script src="@Url.Content("~/Scripts/modernizr-2.0.6-development-only.js")"></script>
        @MvcMiniProfiler.MiniProfiler.RenderIncludes()
        @*Analytics.GetGoogleHtml("UA-177588-7")*@
    </head>
    <body>
        <div id="content-wraper">
            <header class="main">
                <div id="logo"><a href="@Url.Home()">Code52 Extension Gallery</a></div>
                @Html.Partial(MVC.Shared.Views.UserDisplay)
            </header>
            <nav class="main">
                <ul id="menu">
                    @{
                        var homeClass = ViewBag.Tab == "Home" ? "current" : "";
                        var packagesClass = ViewBag.Tab == "Packages" ? "current" : "";
                        var uploadClass = ViewBag.Tab == "Upload" ? "current" : "";
                    }
                    <li class="@homeClass"><a href="@Url.Home()">home</a></li>
                    <li class="@packagesClass"><a href="@Url.PackageList()">extensions</a></li>
                    <li class="@uploadClass"><a href="@Url.UploadPackage()" class="upload">upload</a></li>
                    <li><a href="http://code52.org">apps</a></li>
                </ul>
                <div id="searchBox">
                    <form action="@Url.PackageList()" method="get">
                        <input name="q" id="searchBoxInput" placeholder="Search Extensions" value="@(String.IsNullOrEmpty(ViewBag.SearchTerm) ? "" : ViewBag.SearchTerm)" />
                        <input id="searchBoxSubmit" type="submit" value=" " />
                    </form>
                </div>
            </nav>
            <div id="body">
            @if (TempData.ContainsKey("Message")) {
                <p class="message">@TempData["Message"]</p>
            }
            @RenderBody()
            </div>
        </div>
        <div id="layout-footer" class="group">
            <footer id="footer">
                <div class="license">
                    <p>
                        &copy; @DateTime.UtcNow.Year Code52. Powered by Nuget Gallery
                    </p>
                    @ViewHelpers.ReleaseTag()
                </div>
            </footer>
        </div>
        <script src="@Url.Content("~/Scripts/jquery-1.6.2.min.js")"></script>
        @RenderSection("BottomScripts", required: false)
    </body>
</html>