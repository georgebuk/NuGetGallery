@using NuGetGallery
@model SubmitPackageRequest
@{
    ViewBag.Tab = "Upload Your Package";
}

<h1 class="page-heading">Upload Your Extension</h1>

@ViewHelpers.UploadSequence(1)

@using(Html.BeginForm("UploadPackage", "Packages", FormMethod.Post, new { enctype="multipart/form-data"})){
    <fieldset class="form">
        <legend>Upload a Package</legend>
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <p class="message">Your extension will be uploaded and hosted on the Code52 Extension Gallery.</p>
        <div class="form-field">
            <label for="PackageFile">Choose an extension...</label>
            <input type="file" name="UploadFile" />
        </div>

        <input type="submit" value="Upload" title="Upload the package." />
    </fieldset>
}